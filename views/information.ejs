<%- include('partials/header.ejs') %>

<h2 style = " position: relative; top: 20px; border: 0; background-color: transparent;"><%=title%></h2>

<div class="container text-center">
    <div class = row>
        <div class ="p-2 col;">
            <img src = <%= image %>>
        </div>

    </div>

    <div class = "row">
        <div class = "p-2 col-12 col-lg" style="border: 2px solid;">
            <p style="font-size: x-large; color: red;">Instructions</p>
            <p><%- instructions %></p>
        </div>

        <div class = "p-2 col" style="border: 2px solid;">
            <p style="font-size: xxl-large; color: red;">Ingredients</p>
            <p class = "d-flex flex-wrap"><%= ingredients %></p>
        </div>

    </div>


</div>





<%- include('partials/footer.ejs') %>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
<script>
    $(document).ready(() =>{
        $("body").removeClass("home");
        $("body").addClass("information");
        $("footer").remove()
    })
   
</script>
